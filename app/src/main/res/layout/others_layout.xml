<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="12dp"
        android:background="@drawable/card_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="其他"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/favorite"
            android:layout_marginTop="8dp"
            android:background="@drawable/settings_item_bg"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/feature_enable_img"
                android:src="@drawable/ic_favorite"
                android:tint="#ff0011"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:gravity="center"
                android:text="求赞"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/feature_enable_img"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/about_me"
            android:layout_marginTop="8dp"
            android:background="@drawable/settings_item_bg"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/feature_notify_img"
                android:src="@drawable/ic_about_me"
                android:tint="#ff0059"
                android:layout_width="24dp"
                android:layout_height="24dp"/>
            <TextView
                android:gravity="center"
                android:text="关于我"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/feature_notify_img"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>