<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_108_dp"
    android:background="@drawable/item_card_bg"
    android:layout_marginTop="@dimen/dimen_16_dp"
    android:layout_marginBottom="@dimen/dimen_16_dp"
    android:layout_marginLeft="@dimen/dimen_18_dp"
    android:layout_marginRight="@dimen/dimen_18_dp"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_10_dp">

    <FrameLayout
        android:id="@+id/fl_app_icon"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dimen_12_dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/dimen_48_dp"
        android:layout_height="@dimen/dimen_48_dp">
        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY" />
        <ImageView
            android:id="@+id/iv_app_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:visibility="gone" />
    </FrameLayout>
    <TextView
        android:layout_below="@id/fl_app_icon"
        android:id="@+id/tv_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_4_dp"
        android:ems="10"
        android:fadingEdge="horizontal"
        android:gravity="center_horizontal"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_small_12dp" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dimen_16_dp"
        android:paddingRight="@dimen/dimen_16_dp"
        android:layout_height="@dimen/dimen_4_dp">
        <ImageView
            android:tint="@color/color_red"
            android:src="@drawable/ic_circle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:tint="@color/color_cyan_light"
            android:src="@drawable/ic_circle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:tint="@color/color_orange_light"
            android:src="@drawable/ic_circle"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>